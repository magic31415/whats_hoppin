<h2>Browse Breweries by State...</h2>

<table class="table">

  <tbody>
<%= for state <- @states do %>
    <tr>
      <td><%= state.name %></td>

      <td class="text-right">
        <span><%= link "View Breweries", to: state_path(@conn, :show, state), class: "btn btn-default btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
