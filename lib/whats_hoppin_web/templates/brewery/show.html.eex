<h4><%= link @brewery.name, to: @brewery.website %>
    <span class="text-muted"><%= "(#{@brewery.city}, #{@brewery.state})" %></span>
</h4>

<ul>

  <li>
    <strong>Established date:</strong>
    <%= @brewery.established_date %>
  </li>

  <li>
    <strong>Mass Owned?:</strong>
    <%= if @brewery.is_mass_owned? do %>
      Yes
    <% else %>
      No
    <% end %>
  </li>

  <li>
    <strong>Location type:</strong>
    <%= @brewery.location_type %>
  </li>

</ul>
